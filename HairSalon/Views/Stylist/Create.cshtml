@{
    Layout = "_Layout";
}
@model HairSalon.Models.Stylist

<h4>Add a new Stylist to your list:</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.TalentSpec)
    @Html.TextBoxFor(model => model.TalentSpec)
    <br>

    <input type="submit" value="Add a new stylist" />
    
}
<p>@Html.ActionLink("Back to List", "Index")</p>